/**app.wxss**/
page {
  height: 100%;
  font-size: 14px;
  font-family: Regular;
  background-color: #f0f0f5;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.relative {
  position: relative;
}

.bg-common {
  background-color: #f0f0f5;
}

.bg-white {
  background-color: #FFFFFF;
}

.bg-blue {
  background-color: #0082dc;
}

.bg-blue2 {
  background-color: #4D8AD7
}

.bg-fb {
  background-color: #fbfbfd;
}

/* 字体颜色 */
.fg-black {
  color: #000000;
}

.fg-a {
  color: #aaaaaa;
}

.fg-6 {
  color: #666;
}

.fg-3 {
  color: #333;
}

.f-10 {
  font-size: 10px;
}

.f-12 {
  font-size: 12px;
}

.f-14 {
  font-size: 14px;
}

.f-15 {
  font-size: 15px;
}

.f-18 {
  font-size: 18px;
}

.f-20 {
  font-size: 20px;
}

/* .lh-48 {
  line-height: 48px;
} */

.flex-column-center {
  display: flex;
  align-items: center;
}

.text-center {
  text-align: center;
}

.flex-auto {
  flex: auto;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.none-search-pic {
  display: block;
  width: 120px;
  height: 120px;
  margin: 0 auto 30px;
}

.no-search-result-container {
  width: 180px;
  margin-top: 60px;
  text-align: center;
  position: absolute;
  left: 50%;
  margin-left: -90px;
}